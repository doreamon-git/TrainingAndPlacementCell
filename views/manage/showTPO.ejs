<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/showTPO.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script  src="/js/jquery.js"></script> 
    <script src="/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.1/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    
  <%- include('../partials/navbar')  %>
  <%- include('../partials/flash') %>

  <!-- Add new TPO  -->

    <section class=" gradient-custom">
      <div class="container mt-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-8 col-xl-6 ">
            <div class="card card-custom" >
              <div class="card-body p-2 text-center">
    
                <div class="md-5 mt-md-4 ">
    
                  <form action="/manage/TPO/addTPO" method="POST">
                  <h3 class="  text-uppercase" >Add TPO</h3>
                  <p class="text-white-50 mb-4"></p>
   
                  <div class="px-3">
                  <div class="form-outline form-white mb-4" >
                    <input type="number" id="username" name="rollNo" class="form-control form-control-sm" placeholder="Roll No." style=" border-color: black;"/>
                  </div>
                  
                 </div>
  
                  <button class="button-custom px-3 mb-2" type="submit" >Add</button>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


 <!-- List of all TPOs -->

    <section class="vh-100 gradient-custom mt-5">
      <div class="container py-1 h-50">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-12 col-lg-9 col-xl-7">
  <div >
  <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Roll No.</th>
          <th scope="col">Name</th>
          <th scope="col">Branch</th>
          <th scope="col">Passing Year</th>
          <th scope="col">Contact Number</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        
      <% let sNo = 1 %>    
      <% for(let student of allTPO){ %>
          <tr>
              <th scope="row"> <%= sNo %> </th>
              <td> <%= student.rollNo %> </td>
              <td> <%= student.name %> </td>
              <td> <%= student.branch %> </td>
              <td> <%= student.endYear %> </td>
              <td> <%= student.contactNumber %> </td>
              <td>  
                <span>
                  <form class="d-inline-block" action="/manage/TPO/removeTPO/<%=student._id%>?_method=DELETE" method="POST">
                    <button class="mt-1" style="border: none; background-color: rgba(0,0,0,0);" title="delete"><i class="material-icons">delete</i></button>
                  </form>
                </span>
              </td>
            </tr>
            <% sNo++ %>
      <% } %>  

      </tbody>
    </table>
  </div>
</div>
</div>
</div>
</section>

<script src="/js/nav.js"></script>
</body>
</html>